{
  "name": "ai-code-review",
  "version": "0.1.0",
  "description": "AI-powered code review tool for any programming language",
  "type": "module",
  "main": "index.js",
  "bin": {
    "ai-code-review": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "chmod +x index.js",
    "lint": "eslint . --ext .js,.ts,.tsx, --cache",
    "lint:ci": "npm run lint -- --cache-strategy content",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write . --cache --cache-location ./.prettier-cache",
    "prettier:ci": "prettier --check . --cache --cache-location ./.prettier-cache --cache-strategy content"
  },
  "keywords": [
    "code-review",
    "static-analysis",
    "ai",
    "javascript",
    "typescript",
    "react",
    "python",
    "ruby",
    "cli",
    "code-quality",
    "linter"
  ],
  "files": [
    "*.js",
    "ai-code-review.sh",
    "README.md",
    "LICENSE"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "0.39.0",
    "@huggingface/transformers": "^3.5.1",
    "@lancedb/lancedb": "0.19.0",
    "@octokit/rest": "21.1.1",
    "acorn": "^8.10.0",
    "acorn-jsx": "^5.3.2",
    "acorn-walk": "^8.2.0",
    "chalk": "^5.3.0",
    "cli-spinner": "^0.2.10",
    "commander": "^11.0.0",
    "dotenv": "16.5.0",
    "fastembed": "^1.14.4",
    "glob": "^10.3.0",
    "lru-cache": "11.1.0",
    "marked": "^15.0.11",
    "minimatch": "^9.0.3",
    "natural": "^8.0.1",
    "openai": "4.95.0",
    "p-limit": "6.2.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "eslint": "8.57.1",
    "eslint-plugin-sort-imports-es6-autofix": "0.6.0",
    "eslint-plugin-vitest": "0.5.4",
    "prettier": "3.5.3"
  },
  "volta": {
    "node": "22.12.0",
    "npm": "10.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
